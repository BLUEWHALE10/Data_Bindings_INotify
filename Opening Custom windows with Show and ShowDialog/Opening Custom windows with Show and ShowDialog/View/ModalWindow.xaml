<Window x:Class="Opening_Custom_windows_with_Show_and_ShowDialog.View.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Opening_Custom_windows_with_Show_and_ShowDialog.View"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterOwner"
        Title="ModalWindow" Height="150" Width="300">
    <Grid>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBox Name="txt_Input" Width="200" Height="40" FontSize="20" Margin="10,10,10,0" VerticalAlignment="Top" TextChanged="txt_Input_TextChanged"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btn_ok" Width="60" Height="40" Margin="5" Content="OK" Click="btn_ok_Click" IsEnabled="False"/>    
                <Button Name="btn_Cancle" Width="100" Height="40" Margin="5" Content="Cancel" Click="btn_Cancle_Click"/>    
            </StackPanel>
            
            
        </StackPanel>
        
    </Grid>
</Window>
